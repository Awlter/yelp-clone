%section#top-header.row
  %h1.col-md-2
    = link_to "Yelp", root_path
  %ul.col-md-6
    %li= link_to 'Businesses', businesses_path
    %li= link_to 'Recent Reviews'
    - if !logged_in?
      %li= link_to 'Log in', log_in_path
      %li= link_to 'Sign up', register_path
  - if logged_in?
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            = "Welcome, #{current_user.full_name}"
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              = link_to 'Log Out', log_out_path